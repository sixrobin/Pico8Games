function screenfade_init()
		fading=false
		fade_timer=0
		fade_perc=1
		fade_perc_target=1
		nofade_timer=0
end

function update_fade()
	 fading=fade_perc!=fade_perc_target
		if fading then
				nofade_timer=0
				fade_timer+=0.5
			 if fade_timer>2 then
				 	fade_perc=mid(0,fade_perc+0.2*sgn(fade_perc_target-fade_perc),1)
				 	fade_timer=0
			 end
			 
			 fade_pal(fade_perc)
		else
		  nofade_timer+=1
		end
end

function fade_pal(_perc)
		local _p=flr(mid(0,_perc,1)*100)
		local _kmax,_c
		local _dpal={
		 0,1,1,2,1,13,6,4,4,9,3,16,1,13,14}
		 
		for j=1,15 do
				_c=j
				_kmax=(_p+(j*1.46))/22
				for k=1,_kmax do
						_c=_dpal[_c]
				end
				pal(j,_c)
		end
end
