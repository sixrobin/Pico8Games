		if (shake<0.05) shake=0
end

function ptcs_add(_x,_y,_dx,_dy,_agemax,_colseq,_size)
		local _p=
		{
				x=_x,
				y=_y,
				dx=_dx,
				dy=_dy,
				age=0,
				agemax=_agemax,
				colseq=_colseq,
				size=_size,
				init_size=_size
		}
	
	add(ptcs,_p)
end

function ptcs_update()
		local pt
		for p=#ptcs,1,-1 do
			 _p=ptcs[p]
			 _p.age+=1
			 if _p.age>_p.agemax then
			  	del(ptcs,_p)
			 else
				 	_p.col=_p.colseq[
				 		1+flr((_p.age/_p.agemax)*#_p.colseq)]
		 	 	
				 	-- move particles.
				 	_p.x+=_p.dx
				 	_p.y+=_p.dy
				 	
				 	-- shrink.
				 	_p.size=(1-(_p.age/_p.agemax))*_p.init_size
			 	 
			 	 -- brake.
			 	 _p.dx*=0.75
			 	 _p.dy*=0.75
		 	end
		end
end

function ptcs_draw()
		for pt in all(ptcs) do
				circfill(pt.x,pt.y,pt.size,pt.col)
		end
end

